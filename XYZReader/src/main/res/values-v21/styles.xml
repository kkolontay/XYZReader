<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowReenterTransition">@android:transition/slide_top</item>

    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

</resources>
